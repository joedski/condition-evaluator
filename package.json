{
  "name": "condition-evaluator",
  "description": "Evaluator for Simple Declarative Condition DSLs written in JSON or YAML.",
  "version": "0.1.2",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib es",
    "test": "ava",
    "test:headless": "ava --tap",
    "test:lint": "eslint src",
    "build": "npm run build:commonjs && npm run build:es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "prepublish": "npm run clean && npm run build",
    "preversion": "npm run clean && npm run test:lint"
  },
  "keywords": [
    "condition",
    "conditional",
    "dsl",
    "evaluator",
    "json",
    "yaml"
  ],
  "author": "Joseph Sikorski <joedski@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.14.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "cross-env": "^3.0.0",
    "eslint": "^3.13.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "rimraf": "^2.5.4"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*.js",
      "!_*"
    ],
    "require": [
      "babel-register"
    ]
  }
}
